<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/windowBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/expended_send"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@color/transparent"
        android:padding="32dp"
        android:src="@drawable/ic_send_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@null"
        />

    <ImageButton
        android:id="@+id/expended_settings"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@color/transparent"
        android:padding="32dp"
        android:src="@drawable/ic_settings_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@null"
        />

    <ImageView
        android:id="@+id/expended_image"
        android:layout_width="0dp"
        android:layout_height="320dp"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/cat_10"
        android:contentDescription="@null"
        app:layout_constraintTop_toBottomOf="@id/expended_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/expended_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Текст"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/expended_image" />

    <ImageButton
        android:id="@+id/expended_next"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@color/transparent"
        android:padding="32dp"
        android:src="@drawable/ic_skip_next_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@null" />

    <ImageButton
        android:id="@+id/expended_previous"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@color/transparent"
        android:padding="32dp"
        android:src="@drawable/ic_skip_previous_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@null" />

    <ImageButton
        android:id="@+id/expended_play"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@color/transparent"
        android:padding="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_play_circle_24"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@null"
        />

</androidx.constraintlayout.widget.ConstraintLayout>